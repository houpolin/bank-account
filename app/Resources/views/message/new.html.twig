{% extends 'base.html.twig' %}
{% block title %}留言板{{ title }}{% endblock %}
{% block body %}
<div class="container">
    <div class="row justify-content-center">
        <div class="row">
            <h1>留言板</h1>
        </div>
    </div>
    <div class="row justify-content-center">
        <div class="col-10">
            {% import 'forms.html.twig' as forms %}
            <form action='{{ path("message_create") }}' method="post">
                <div class="form-group">
                    <label for="title">標題</label>
                    {{ forms.input('form-control', 'title') }}
                </div>
                <div class="form-group">
                    <label for="content">內容</label>
                    {{ forms.textarea('form-control', 'content') }}
                </div>
                    {{ forms.input('btn btn-primary', 'submit', '新增', 'submit') }}
                <a href="{{ path('message') }}"><button type="button" class="btn btn-warning">返回</button></a>
            </form>
        </div>
    </div>
</div>
{% endblock %}
